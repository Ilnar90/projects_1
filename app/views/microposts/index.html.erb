<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<% if @microposts.length == 0 %>
  <h1>Нет созданных постов</h1>
<% else %>
  <h1>Все посты:</h1>
<% end %>  

<% @microposts.each do |micropost| %>
  <tr>
    <% if user_signed_in? && current_user == micropost.user %>
      <td class="content"><h5><%= link_to micropost.title.capitalize, micropost_path(micropost) %></h5></td>
      <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
      <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <td><span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</span></td>
    <td><span class="content"><%= micropost.user.email.capitalize %></span></td>
  </tr>
<% end %>
