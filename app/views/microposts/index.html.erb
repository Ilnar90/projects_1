<h1>Listing microposts</h1>

<% @microposts.each do |micropost| %>
  
  <tr>
    <td>
      <h5><span class="content"><%= micropost.user.email %></span></h5>
    </td>
    <td><span class="content"><%= micropost.title %></span></td>
    <% if user_signed_in? && current_user == micropost.user %>
      <td><%= link_to 'Show', micropost_path(micropost) %></td>
      <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
      <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <td><span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</span></td>
  </tr>
<% end %>


